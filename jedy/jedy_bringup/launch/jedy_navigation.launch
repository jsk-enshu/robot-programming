<launch>
  <arg name="custom_param_file" default="$(find turtlebot_navigation)/param/dummy.yaml"/>

  <!-- Map server -->
  <arg name="map_file" default="$(find jedy_bringup)/config/map.yaml"/>
  <node name="map_server"
        pkg="map_server" type="map_server"
        args="$(arg map_file)" />

  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="0.0"/>
  <!-- 2.3.7 changed the locaiton, but released version is 2.3.3 -->
  <!-- <include file="$(find turtlebot_navigation)/launch/includes/amcl/amcl.launch.xml"> -->
  <include file="$(find jedy_bringup)/launch/includes/amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- skip velocity smoother and kobuki_safety_controller -->
  <node pkg="nodelet" type="nodelet"
        name="mobile_base_nodelet_manager" args="manager"/>
  <node name="velocity_smoother_renamer"
        pkg="topic_tools" type="transform"
        args="--wait-for-start /navigation_velocity_smoother/raw_cmd_vel /cmd_vel
              geometry_msgs/Twist '[m.linear,geometry_msgs.msg.Vector3(0,0,m.angular.z/2)]' --import geometry_msgs" />

  <include file="$(find jedy_bringup)/launch/includes/move_base.launch.xml">
    <arg name="custom_param_file" value="$(arg custom_param_file)"/>
  </include>

  <!-- Run slam_karto node for mapping -->
  <node pkg="slam_karto" type="slam_karto" name="slam_karto" output="screen">
    <param name="odom_frame" value="odom" />
    <param name="map_frame" value="map" />
    <param name="base_frame" value="base_link" />
    <param name="scan_buffer_size" value="70" />
    <param name="map_update_interval" value="5.0" />
    <param name="resolution" value="0.05" />
    <remap from="scan" to="/scan" />
    <param name="transform_publish_period" value="0.05"/>
  </node>

</launch>
